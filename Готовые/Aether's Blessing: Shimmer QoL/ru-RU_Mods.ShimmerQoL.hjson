Items: {
	AetherPylonItem: {
		DisplayName: Пилон эфира
		Tooltip:
			'''
			Позволяет телепортироваться к другому пилону, когда хотя бы {0} {^0:житель находится;жителя находятся;жителей находятся} поблизости
			Можно установить только один, соответствующий биому
			'''
	}

	GenesisConduitItem: {
		DisplayName: Проводник мироздания
		Tooltip:
			'''
			Позволяет совмещать некоторые аксессуары
			Гарантирует хорошие модификаторы у создаваемого снаряжения, если установлен в биоме эфира
			'''
	}

	ShimmerWellItem: {
		DisplayName: Колодец мерцания
		Tooltip: Позволяет осуществлять трансмутации с помощью меню создания предметов без использования мерцания
	}

	AetherCompass: {
		DisplayName: Мистический компас
		Tooltip:
			'''
			Выпускает слабый лучик света в сторону биома эфира
			Компас не сработает, если в мире нет биома эфира
			«Странно... ни одна из его стрелок не указывает на север»
			'''
	}
}

Tiles: {
